<%- include('./partials/header') %>
<div>
    <%- include('./stud_functions') %>
</div>
<div style="margin:0; background-color: rgb(10, 31, 25);">
    <h1 style="font-family: monospace;"><strong><%= user.name %></strong></h1>
    <h4 style="font-family: Verdana, Geneva, Tahoma, sans-serif;"><strong><%= user.user_type %></strong></h3>
</div>
<div style="margin:0; text-align: center;background-color: rgba(7, 27, 22, 0.61);">
    <h3 style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">Username : <%= user.name %></h3>
    <h3 style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">Email : <%= user.email %></h3>
    <h3 style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">Department : <%= user.department %></h3>
</div>
<hr>
<div>
    <h4 style="text-align: center ;font-family: monospace;background-color: rgba(16, 114, 89, 0.623); margin:0">Leaves</h4>
    <table class="table">
        <tr class="table-dark">
            <th>Subject</th>
            <th>From</th>
            <th>To</th>
            <th>Days</th>
            <th>Status</th>
        </tr>
        <% user.leaves.forEach(function(leave){ %>
            <tr class="table-info">
                <td><%= leave.subject %></td>
                <td><%= moment(leave.from).format('DD/MM/YY') %></td>
                <td><%= moment(leave.to).format('DD/MM/YY') %></td>
                <td><%= leave.days %></td>
                <td><%= leave.status %></td>
            </tr>
        <% }) %>
    </table>
</div>
<%- include('./partials/footer') %>